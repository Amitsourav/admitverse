# AdmitVerse Website Environment Variables
# Copy this file to .env.local and update with your actual values

# ===========================================
# DATABASE (Supabase)
# ===========================================
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# ===========================================
# AUTHENTICATION (NextAuth)
# ===========================================
# Generate with: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ===========================================
# AI SERVICES (OpenAI)
# ===========================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_ORG_ID=org-your_org_id_here
OPENAI_MODEL=gpt-3.5-turbo

# ===========================================
# EMAIL SERVICE (Resend)
# ===========================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_REPLY_TO=support@yourdomain.com

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking (Optional)
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn_here
SENTRY_ORG=admitverse
SENTRY_PROJECT=admitverse-web
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ===========================================
# DEPLOYMENT (Vercel)
# ===========================================
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=team_your_team_id
VERCEL_PROJECT_ID=prj_your_project_id

# ===========================================
# FEATURE FLAGS
# ===========================================
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_BLOG=true
FEATURE_ADMIN_PANEL=true
FEATURE_COLLEGE_COMPARISON=false
FEATURE_USER_REVIEWS=false

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=AdmitVerse
NEXT_PUBLIC_APP_DESCRIPTION=Your Gateway to International Education

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Cache Settings (seconds)
CACHE_TTL_COLLEGES=3600
CACHE_TTL_COURSES=3600
CACHE_TTL_SEARCH=300

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
DEBUG=true
NEXT_PUBLIC_DEBUG_MODE=true

# Database seeding
SEED_USER_PASSWORD=admin123
SEED_ADMIN_EMAIL=admin@admitverse.com