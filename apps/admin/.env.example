# AdmitVerse Admin Panel Environment Variables
# Copy this file to .env.local and update with your actual values

# ===========================================
# DATABASE (Supabase)
# ===========================================
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ===========================================
# AUTHENTICATION (NextAuth)
# ===========================================
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your_nextauth_secret_here

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME=AdmitVerse Admin
NEXT_PUBLIC_APP_DESCRIPTION=Content Management System

# ===========================================
# ADMIN SPECIFIC
# ===========================================
# Default admin credentials
ADMIN_EMAIL=admin@admitverse.com
ADMIN_PASSWORD=admin123

# File upload limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=jpg,jpeg,png,webp,svg

# ===========================================
# FEATURE FLAGS
# ===========================================
FEATURE_BLOG_EDITOR=true
FEATURE_COLLEGE_BULK_IMPORT=true
FEATURE_ANALYTICS=true
FEATURE_USER_MANAGEMENT=true